public class Solution {
    public String solve(String A) {
        String result = new String();
        int size = A.length();
        for(int i = 0; i < size; i++) {
            result += A.charAt(i);
            result += A.charAt(i) - 'a' + 1;  
        }
        return result;
    }
}

###########################################################################

public class Solution {
    public String solve(String A) {
        String result = new String();
        int size = A.length();
        for(int i = 0; i < size; i++) {
            result += A.charAt(i);
            result += A.charAt(i) - 96;  
        }
        return result;
    }
}
